#!/bin/bash

# VPN Installer AlphaV2
# Complete package with automatic cleanup

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Animation characters
SPINNER=('⣾' '⣽' '⣻' '⢿' '⡿' '⣟' '⣯' '⣷')

# Show header
show_header() {
    clear
    echo -e "${BLUE}"
echo -e "\033[1;31m"  # Red color
echo " ███████╗░█████╗░███╗░░██╗░██████╗████████╗░█████╗░ ┳━━━┳━━━┓"
echo " ██╔════╝██╔══██╗████╗░██║██╔════╝╚══██╔══╝██╔══██╗ ┃┏━┓┃┏━━┛"
echo " █████╗░░███████║██╔██╗██║╚█████╗░░░░██║░░░██║░░██║ ┃┗━┛┃┗━━┓"
echo " ██╔══╝░░██╔══██║██║╚████║░╚═══██╗░░░██║░░░██║░░██║ ┃┏┓┏┫┏━━┛"
echo " ██║░░░░░██║░░██║██║░╚███║██████╔╝░░░██║░░░╚█████╔╝ ┃┃┃┗┫┗━━┓"
echo " ╚═╝░░░░░╚═╝░░╚═╝╚═╝░░╚══╝╚═════╝░░░░╚═╝░░░░╚════╝░ ┻┛┗━┻━━━┛"
echo " ██╗   ██╗██████╗ ███╗   ██╗"
echo " ██║   ██║██╔══██╗████╗  ██║"
echo " ██║   ██║██████╔╝██╔██╗ ██║"
echo "  ██║ ██ ║██╔═══╝ ██║╚██╗██║"
echo "  ╚████ ╔╝██║     ██║ ╚████║"
echo "  ╚═════╝ ╚═╝     ╚═╝  ╚═══╝"
echo -e "\033[0m"  # Reset color
    echo -e "${YELLOW}------------------------------------------${NC}"
    echo -e "${GREEN}    UPDATE INSTALLER - COMPLETE PACKAGE    ${NC}"
    echo -e "${YELLOW}------------------------------------------${NC}"
    echo
}

# Spinner animation
spinner() {
    while true; do
        for i in "${SPINNER[@]}"; do
            echo -ne "\r${BLUE}[${i}] ${YELLOW}Installing...${NC} "
            sleep 0.1
        done
    done
}

# Main installation
main_install() {
    # Start spinner animation
    spinner &
    SPINNER_PID=$!
    
    # 1. Install PPTP/L2TP/SSTP
    echo -e "\n${YELLOW}▶ Installing PPTP/L2TP/SSTP/WIREGUARD & TROJANGO...${NC}"
    cd
    rm -f installer-sstp.sh
    wget -q https://raw.githubusercontent.com/suharaaja484/scriptvpn/refs/heads/main/installer-sstp.sh
    wget -q https://raw.githubusercontent.com/suharaaja484/scriptvpn/refs/heads/main/installer-wg.sh
    wget -q https://raw.githubusercontent.com/suharaaja484/scriptvpn/refs/heads/main/install/ins-trgo.sh
    chmod +x installer-sstp.sh
    chmod +x installer-wg.sh
    chmod +x ins-trgo.sh
    sudo ./installer-sstp.sh
    sudo ./installer-wg.sh
    sudo ./ins-trgo.sh
    rm -f installer-sstp.sh
    rm -f installer-wg.sh
    rm -f ins-trgo.sh
    echo -e "${GREEN}✔ PPTP/L2TP/SSTP/WIREGUARD & TROJANGO installed successfully${NC}"
    
    # 2. Install System Updates
    echo -e "\n${YELLOW}▶ Installing System Updates...${NC}"
    cd
    rm -f alpha2_update
    wget -q https://raw.githubusercontent.com/suharaaja484/scriptvpn/refs/heads/main/script2_update
    chmod +x script2_update
    ./script2_update
    rm -f script2_update
    echo -e "${GREEN}✔ System Updates installed successfully${NC}"
    
    # 3. Install VPN Menu & Menu Backup to /usr/local/sbin
    echo -e "\n${YELLOW}▶ Installing Data Menu Update /usr/local/sbin...${NC}"
    sudo mkdir -p /usr/local/sbin
    cd /usr/local/sbin
    sudo rm -f vpn
    sudo rm -f backup
    sudo rm -f restore
    sudo rm -f delws
    sudo wget -q https://raw.githubusercontent.com/suharaaja484/scriptvpn/refs/heads/main/backup
    sudo wget -q https://raw.githubusercontent.com/suharaaja484/scriptvpn/refs/heads/main/restore
    sudo wget -q https://raw.githubusercontent.com/suharaaja484/scriptvpn/refs/heads/main/vpn
    sudo wget -q https://raw.githubusercontent.com/suharaaja484/scriptvpn/refs/heads/main/delws
    sudo chmod +x backup
    sudo chmod +x restore
    sudo chmod +x vpn
    sudo chmod +x delws
    cd
    echo -e "${GREEN}✔ VPN Menu installed to /usr/local/sbin/vpn${NC}"

    # Stop spinner
    kill $SPINNER_PID
    wait $SPINNER_PID 2>/dev/null
    # 4. Install BACKUP & RESTORE /usr/local/sbin
    sudo apt-get install dos2unix -y
    sudo dos2unix /usr/local/sbin/backup
    sudo dos2unix /usr/local/sbin/restore
     cd
    echo -e "${GREEN}✔ BACKUP & RESTORE /usr/local/sbin/backup&restore${NC}"
    # Completion message
    echo -e "\n${YELLOW}------------------------------------------${NC}"
    echo -e "${GREEN}✔ All installations completed successfully!${NC}"
    echo -e "${YELLOW}------------------------------------------${NC}"
    
    # Self-cleanup
    echo -e "\n${YELLOW}Cleaning up installer...${NC}"
    sleep 2
    rm -f "$0"
}

# Start installation
show_header
main_install
